<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutcreatnfind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myclub.MyPlan" >

    <Button
        android:id="@+id/buttonhomemyplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_home_selector" />

    <ListView
        android:id="@+id/listviewmyplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonhomemyplan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonback7" >

    </ListView>

    <Button
        android:id="@+id/buttonback7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView1"
        android:background="@drawable/button_back_selector" />

    <Button
        android:id="@+id/buttonmycalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/listviewmyplan"
        android:layout_toRightOf="@+id/buttonhomemyplan"
        android:text="我的课表" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonback7"
        android:layout_alignBottom="@+id/buttonback7"
        android:layout_alignParentLeft="true"
        android:text="aaaaa"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00000000" />

</RelativeLayout>